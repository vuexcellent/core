{
  "name": "orm",
  "version": "0.0.1",
  "description": "Vuexloquent is a plugin for Vuex to enable ORM access to the Vuex.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuexloquent/orm.git"
  },
  "keywords": ["Vuex", "ORM"],
  "author": "Thiago Victorino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuexloquent/orm/issues"
  },
  "homepage": "https://github.com/vuexloquent/orm#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "files": [
    "lib/**/*"
  ]
}
